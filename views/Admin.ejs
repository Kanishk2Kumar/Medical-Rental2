<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Medical E-Commerce Admin Dashboard</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<section id="Admin_body">
  <div class="admin-container">
    <nav class="admin-nav">
      <h1><i class="fas fa-medkit"></i><a href="/">Admin Dashboard</a></h1>
      <ul>
        <li><a href="/product/EditProducts"><i class="fas fa-box"></i>Manage Products</a></li>
        <li><a href="/medicines/EditMedicines"><i class="fas fa-box"></i>Manage Medicines</a></li>
        <li><a href="/admin/AllUsers"><i class="fas fa-users"></i>All Users</a></li>
        <li><a href="/Revenue"><i class="fas fa-chart-line"></i>Sales</a></li>
      </ul>
    </nav>
  </div>
  <!-- main content -->
  <main class="p-4 min-vh-100">
    <div class="admin-content">
      <section id="manage-products" class="active">
        <h2><i class="fas fa-box"></i> Users Data</h2>
        <div class="card">
          <h3><i class="fas fa-list"></i>Users List</h3>
          <p>List of Users will be here.</p>
          <div class="my-4 p-4 bg-body rounded shadow-sm">
            <table class="user-table">
              <thead>
                <tr class="user-table-row" style="color: #005a5b;">
                  <th class="user-table-header">Username</th>
                  <th class="user-table-header">Email</th>
                  <th class="user-table-header">ID</th>
                  <th class="user-table-header">Created At</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(function(user) { %>
                  <tr class="user-table-row">
                    <td class="user-table-cell">
                      <%= user.username %>
                    </td>
                    <td class="user-table-cell">
                      <%= user.email %>
                    </td>
                    <td class="user-table-cell">
                      <%= user._id %>
                    </td>
                    <td class="user-table-cell">
                      <%= user.createdAt.toISOString().split('T')[0] %>
                    </td>
                  </tr>
                  <% }); %>
              </tbody>
            </table>
            <small class="d-block text-end mt-4">
              <a href="#">All Users</a>
            </small>
          </div>
        </div>
      </section>
    </div>
  </main>
  </div>
</section>