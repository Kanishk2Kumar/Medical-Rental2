<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= Medicine.title %></title>
    <link rel="stylesheet" href="/path/to/your/styles.css">
    <style>
        /* Popup styles */
        .popup {
            display: none; /* Hidden by default */
            position: fixed; /* Stay in place */
            z-index: 1; /* Sit on top */
            left: 0;
            top: 0;
            width: 100%; /* Full width */
            height: 100%; /* Full height */
            overflow: auto; /* Enable scroll if needed */
            background-color: rgb(0,0,0); /* Fallback color */
            background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
        }
        .popup-content {
            background-color: #fefefe;
            margin: 15% auto; /* 15% from the top and centered */
            padding: 20px;
            border: 1px solid #888;
            width: 80%; /* Could be more or less, depending on screen size */
        }
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }
        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
        .main-wrapper {
            width: 80%;
            margin: auto;
        }
        .container {
            display: flex;
            flex-direction: row;
            height: 600px;
        }
        .product-div {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            width: 100%;
        }
        .product-div-left, .product-div-right {
            flex: 1;
            margin: 10px;
            flex-direction: column;
        }
        .hover-container {
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .hover-container img {
            max-width: 100%;
            max-height: 300px;
            object-fit: cover;
        }
        .img-container {
            text-align: center;
            margin-top: 10px;
            width: 450px;
        }

        .img-container img {
            max-width: 100%;
            max-height: 500px;
            object-fit: cover;
        }

        .product-name {
            font-size: 24px;
            font-weight: bold;
        }

        .product-description, .usage-description {
            margin: 20px 0;
        }

        .product-price, .product-stock {
            display: block;
            margin: 10px 0;
            font-size: 18px;
        }

        .btn-groups {
            display: flex;
            flex-direction: row;
            gap: 10px;
        }

        .add-cart-btn, .buy-now-btn {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
        }

        .add-cart-btn {
            background-color: #28a745;
            color: white;
            border: none;
        }

        .buy-now-btn {
            background-color: #007bff;
            color: white;
            border: none;
        }
    </style>
</head>
<body>
    <div class="main-wrapper">
        <div class="container">
            <div class="product-div">
                <div class="product-div-left">
                    
                    <div id="imageZoom" class="img-container">
                        <img id="main-image" src="/<%= Medicine.image %>" alt="Medicine Image">
                    </div>
                    <div class="hover-container">
                        <div><img src="/<%= Medicine.image %>" alt="thumbnail1"></div>
                    </div>
                </div>
                <div class="product-div-right">
                    <span class="product-name"><%= Medicine.title %></span>
                    <p class="product-description"><h4>Product Description: </h4><%= Medicine.description %></p>
                    <span class="product-price">Price(in â‚¹): <%= Medicine.price %></span>
                    <span class="product-stock">In Stock: <%= Medicine.inStock %></span>
                    <div class="btn-groups">
                        <button type="button" id="add-to-cart-btn" class="add-cart-btn"><i class="fas fa-shopping-cart"></i> add to cart</button>
                        <button type="button" class="buy-now-btn"><i class="fas fa-wallet"></i> buy now</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add to Cart Popup -->
    <div id="add-to-cart-popup" class="popup">
        <div class="popup-content">
            <span class="close">&times;</span>
            <h2>Add to Cart</h2>
            <form id="add-to-cart-form" action="/cart" method="POST">
                <label for="quantity">Quantity:</label>
                <input type="number" id="quantity" name="quantity" min="1" max="<%= Medicine.inStock %>" value="1" required>
                <input type="hidden" name="userId" value="<%= currentUser_Id %>"> <!-- Assuming user ID is available as user._id -->
                <input type="hidden" name="productId" value="<%= Medicine._id %>">
                <button type="submit">Add to Cart</button>
            </form>
        </div>
    </div>
    <div id="order-placed-popup" class="popup">
        <div class="popup-content">
            <span class="close">&times;</span>
            <h2>Order placed successfully</h2>
            <p style="font-size: 18px;">Your order has been placed successfully!</p>
        </div>
    </div>
    <script>
        // Get the popup
        const popup = document.getElementById('add-to-cart-popup');

        // Get the button that opens the popup
        const addToCartBtn = document.getElementById('add-to-cart-btn');

        // Get the <span> element that closes the popup
        const closeBtn = document.getElementsByClassName('close')[0];

        // When the user clicks the button, open the popup 
        addToCartBtn.onclick = function() {
            popup.style.display = 'block';
        }

        // When the user clicks on <span> (x), close the popup
        closeBtn.onclick = function() {
            popup.style.display = 'none';
        }

        // When the user clicks anywhere outside of the popup, close it
        window.onclick = function(event) {
            if (event.target == popup) {
                popup.style.display = 'none';
            }
        }
        // Get the Order Placed popup
        const orderPlacedPopup = document.getElementById('order-placed-popup');

        // Get the Buy Now button
        const buyNowBtn = document.querySelector('.buy-now-btn');

        // Get the <span> element that closes the popup
        const closeOrderPlacedBtn = orderPlacedPopup.getElementsByClassName('close')[0];

        // When the user clicks the Buy Now button, open the Order Placed popup
        buyNowBtn.onclick = function() {
            orderPlacedPopup.style.display = 'block';
        }

        // When the user clicks on <span> (x), close the Order Placed popup
        closeOrderPlacedBtn.onclick = function() {
            orderPlacedPopup.style.display = 'none';
        }

        // When the user clicks anywhere outside of the Order Placed popup, close it
        window.onclick = function(event) {
            if (event.target == orderPlacedPopup) {
                orderPlacedPopup.style.display = 'none';
            }
        }
    </script>
</body>
</html>
