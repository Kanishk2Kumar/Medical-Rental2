<section id="ProfileBody">
    <div class="profile-container">
        <div class="profile-header">
            <div>
                <h1>UserName : <%= user.username %></h1>
                <p class="label">Date of Birth: <%= user.dateOfBirth %></p>
            </div>
            <a href="/editProfile/<%= currentUser_Id %>" class="edit-icon">&#x270F;</a>
        </div>

        <div class="profile-section">
            <h2><span class="icon">&#128100;</span>Personal Information</h2>
            <p class="label">Address:</p>
            <p><%= user.address %></p>

            <p class="label">Email Address:</p>
            <p><%= user.email %> </p>
        </div>

        <div class="profile-section">
            <h2><span class="icon">&#128137;</span>Diagnosis Details</h2>
            <div class="diagnosis">
                <p><%= user.Diagonsis %></p>                
            </div>
        </div>
    </div>
</body>